{
    "name": "dialog-demo",
    "publisher": "huaweicloud",
    "author": "huaweicloud",
    "keywords": [
        "cloudide",
        "plugin"
    ],
    "version": "1.0.0",
    "license": "SEE LICENSE IN LICENSE",
    "description": "dialog demo",
    "displayName": "dialog-demo",
    "icon": "resources/icons/logo.png",
